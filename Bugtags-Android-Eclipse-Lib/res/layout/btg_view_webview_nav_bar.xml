<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/common_title"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/bar_text_middle"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:textColor="@color/btg_global_black"
        android:textIsSelectable="false"
        android:textSize="@dimen/btg_global_font_great"/>

    <RelativeLayout
        android:id="@+id/bar_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/bar_button_left"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/btg_btn_back"/>

        <TextView
            android:id="@+id/bar_text_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/bar_button_left"
            android:textSize="16sp"/>
    </RelativeLayout>

    <TextView
        android:textColor="@color/btg_global_black"
        android:id="@+id/bar_text_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/bar_left"
        android:textSize="16sp"/>


</RelativeLayout>